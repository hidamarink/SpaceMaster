<Page x:Class="SpaceMaster.Views.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:SpaceMaster.ViewModels"
      xmlns:converters="clr-namespace:SpaceMaster.Views.Converters"
      Title="历史记录">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:SizeConverter x:Key="SizeConverter" />
        <converters:TypeConverter x:Key="TypeConverter" />
        <converters:StatusConverter x:Key="StatusConverter" />
        <converters:ValidityTextConverter x:Key="ValidityTextConverter" />
        <converters:ValidityColorConverter x:Key="ValidityColorConverter" />
        <converters:InvalidRowForegroundConverter x:Key="InvalidRowForegroundConverter" />
    </Page.Resources>

    <Page.DataContext>
        <vm:HistoryViewModel />
    </Page.DataContext>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0"
                   Text="迁移历史"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16" />

        <!-- 筛选器 -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="源磁盘：" VerticalAlignment="Center" Margin="0,0,8,0" />
            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding SourceDriveFilters}"
                      SelectedItem="{Binding SelectedSourceDrive}"
                      MinWidth="80"
                      Margin="0,0,16,0" />

            <TextBlock Grid.Column="2" Text="目标磁盘：" VerticalAlignment="Center" Margin="0,0,8,0" />
            <ComboBox Grid.Column="3"
                      ItemsSource="{Binding TargetDriveFilters}"
                      SelectedItem="{Binding SelectedTargetDrive}"
                      MinWidth="80" />

            <ui:Button Grid.Column="5"
                       Content="刷新"
                       Icon="{ui:SymbolIcon ArrowSync24}"
                       Command="{Binding LoadRecordsCommand}" />
        </Grid>

        <!-- 记录列表 -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Records}"
                  SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsValid}" Value="False">
                            <Setter Property="Foreground" Value="#999999" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="源路径" Binding="{Binding SourcePath}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="目标路径" Binding="{Binding TargetPath}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="大小" Binding="{Binding Size, Converter={StaticResource SizeConverter}}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="类型" Binding="{Binding IsDirectory, Converter={StaticResource TypeConverter}}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="迁移时间" Binding="{Binding MigratedAt, StringFormat=yyyy-MM-dd HH:mm}" Width="130">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="状态" Binding="{Binding Status, Converter={StaticResource StatusConverter}}" Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="有效" Binding="{Binding IsValid, Converter={StaticResource ValidityTextConverter}}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="Foreground" Value="{Binding IsValid, Converter={StaticResource ValidityColorConverter}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 底部操作栏 -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{Binding StatusMessage}" />
                <ProgressBar Value="{Binding RestoreProgress}"
                             Maximum="100"
                             Width="150"
                             Height="6"
                             Margin="16,0,0,0"
                             Visibility="{Binding IsRestoring, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>

            <ui:Button Grid.Column="1"
                       Content="删除记录"
                       Appearance="Secondary"
                       Icon="{ui:SymbolIcon Delete24}"
                       Command="{Binding DeleteRecordCommand}"
                       Margin="0,0,8,0" />

            <ui:Button Grid.Column="2"
                       Content="{Binding ActionButtonText}"
                       Appearance="Primary"
                       Icon="{ui:SymbolIcon ArrowUndo24}"
                       Command="{Binding RestoreOrRemigrateCommand}" />
        </Grid>
    </Grid>
</Page>
